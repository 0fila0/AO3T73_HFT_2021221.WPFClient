<Window x:Class="Aruhaz.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aruhaz.WpfClient"
        mc:Ignorable="d"
        Title="Menu" Height="250" Width="800" Background="Beige">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Click="Shops_Clicked" FontSize="22" Content="Áruházak" Width="150" Height="50" Background="LightBlue"/>
        <Button Grid.Column="1" Click="Manufacturers_Clicked" FontSize="22" Content="Gyártók" Width="150" Height="50" Background="LightBlue"/>
        <Button Grid.Column="2" Click="Products_Clicked" FontSize="22" Content="Termékek" Width="150" Height="50" Background="LightBlue"/>
    </Grid>
</Window>
