<Window x:Class="Aruhaz.WpfClientRandom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aruhaz.WpfClientRandom"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainVMRandom />
    </Window.DataContext>
    <Grid>
        <Button Command="{Binding Path=LoadCmd}" Content="Send" HorizontalAlignment="Center" Height="25" Margin="0,303,0,0" VerticalAlignment="Top" Width="80"/>
        <TextBox Text="{Binding Path=RandomShopsNumber}" HorizontalAlignment="Center" Height="51" Margin="0,204,0,0" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="30"/>
    </Grid>
</Window>
